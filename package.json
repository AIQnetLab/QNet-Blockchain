{
  "name": "qnet-project",
  "version": "1.0.0",
  "description": "QNet Blockchain - Post-Quantum Decentralized Network",
  "private": true,
  "workspaces": [
    "applications/qnet-explorer",
    "applications/qnet-explorer/frontend",
    "qnet-explorer/frontend"
  ],
  "scripts": {
    "dev": "cd applications/qnet-explorer/frontend && npm run dev",
    "build": "cd applications/qnet-explorer/frontend && npm run build",
    "start": "cd applications/qnet-explorer/frontend && npm start",
    "install-all": "npm install && cd applications/qnet-explorer && npm install && cd frontend && npm install",
    "clean": "rm -rf node_modules applications/*/node_modules **/node_modules",
    "test": "echo 'Run tests in specific modules'",
    "lint": "echo 'Run linting in specific modules'"
  },
  "keywords": [
    "blockchain",
    "post-quantum",
    "cryptocurrency",
    "decentralized",
    "rust",
    "typescript"
  ],
  "author": "QNet Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/qnet-project.git"
  }
} 