{
  "manifest_version": 3,
  "name": "QNet Wallet",
  "version": "2.0.0",
  "description": "QNet Production Wallet - Dual Network (Solana/QNet) with Phase 2 QNC Pool 3 Activation",
  
  "permissions": [
    "storage",
    "tabs",
    "windows",
    "notifications",
    "alarms",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "background",
    "identity"
  ],
  
  "host_permissions": [
    "http://localhost/*",
    "https://*.qnet.network/*",
    "https://*.qnet.io/*",
    "https://bridge.qnet.io/*",
    "https://testnet-bridge.qnet.io/*",
    "https://*.solana.com/*",
    "https://api.mainnet-beta.solana.com/*",
    "https://api.devnet.solana.com/*",
    "https://api.testnet.solana.com/*",
    "https://aiqnet.io/*",
    "https://1984.hosting/*"
  ],
  
  "background": {
    "service_worker": "background-production.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "QNet Wallet",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "icons/*",
        "dist/*",
        "setup.html",
        "styles/*",
        "scripts/*",
        "src/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;"
  },
  
  "externally_connectable": {
    "matches": [
      "https://*.qnet.network/*",
      "https://aiqnet.io/*",
      "http://localhost:*/*"
    ]
  }
} 