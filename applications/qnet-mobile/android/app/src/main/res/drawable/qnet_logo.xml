<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer ring -->
    <item
        android:width="120dp"
        android:height="120dp"
        android:gravity="center">
        <shape android:shape="ring"
            android:innerRadiusRatio="2.2"
            android:thicknessRatio="16"
            android:useLevel="false">
            <gradient
                android:startColor="#00d4ff"
                android:centerColor="#00a0cc"
                android:endColor="#00d4ff"
                android:type="sweep" />
        </shape>
    </item>
    
    <!-- Inner ring -->
    <item
        android:width="100dp"
        android:height="100dp"
        android:gravity="center">
        <shape android:shape="ring"
            android:innerRadiusRatio="2.2"
            android:thicknessRatio="20"
            android:useLevel="false">
            <gradient
                android:startColor="#006688"
                android:centerColor="#0080aa"
                android:endColor="#006688"
                android:type="sweep" />
        </shape>
    </item>
    
    <!-- Center background -->
    <item
        android:width="60dp"
        android:height="60dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#16213e" />
        </shape>
    </item>
    
</layer-list>
